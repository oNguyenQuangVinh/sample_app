<%= form_for @micropost, html: {multipart: true} do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: t(".compose") %>
  </div>
  <%= f.submit t(".post"), class: "btn btn-primary" %>
  <span class="picture">
    <%= f.file_field :picture, accept: t(".accept") %>
  </span>
<% end %>

<script type="text/javascript">
  $('#micropost_picture').bind(<%= t ".change" %>, function() {
    var size_in_megabytes = this.files[0].size/Settings.size_in_megabytes/Settings.size_in_megabytes;
    if (size_in_megabytes > Settings.picture_size) {
      alert(<%= t ".msg_maximum" %>);
    }
  });
</script>
